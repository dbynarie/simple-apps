# MENENTUKAN IMAGE
FROM node:18.16

# PERINTAH YANG DIJALANKAN PADA SAAT PEMBUATAN IMAGE
RUN apt update -y 

# COPY FILE TO IMAGE
ADD . /app

RUN npm install

# MAINTAINER IMAGE
LABEL email="deni@idn.id"

# PERINTAH YANG DIJALANKAN PADA SAAT CONTAINER SUDAH UP
CMD ["npm", "start"]

# DESCRIBE EXPOSE PORT
EXPOSE 3000